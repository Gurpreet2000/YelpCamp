<%- include("partials/header"); %>

<div class="container">
    <h1 class="text-center mt-4 mb-3">Create a New Campgrond</h1>
    <div class="row justify-content-center">
        <div class="col-8 col-md-6 col-lg-5 col-xl-4">
            <form action="/campgrounds" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="name" name="name">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="image url" name="image">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>


