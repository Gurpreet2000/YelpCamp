<%- include("../partials/header"); %>

<div class="container">
  <h1 class="text-center mt-4 mb-3">Add New Comment <%= campground.name %></h1>
  <div class="row justify-content-center">
    <div class="col-8 col-md-6 col-lg-5 col-xl-4">
      <form action="/campgrounds/<%= campground._id %>/comments" method="post">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="text" name="comment[text]" />
        </div>
        <div class="form-group">
          <button class="btn btn-md btn-primary btn-block">Submit!</button>
        </div>
      </form>
      <a href="/campgrounds/<%= campground._id %>">Go Back</a>
    </div>
  </div>
</div>

<%- include("../partials/footer"); %>
