<%- include("../partials/header") %>

<div class="container">
  <h1 class="text-center mb-3">Edit <%= campground.name %></h1>
  <div class="row justify-content-center">
    <div class="col-8 col-md-6 col-lg-5 col-xl-4">
      <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
        <div class="form-group">
          <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>" />
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>" />
        </div>
        <div class="form-group">
          <textarea class="form-control" name="campground[description]" cols="30" rows="5">
            <%= campground.description %>
          </textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-md btn-primary btn-block">Submit!</button>
        </div>
      </form>
      <a href="/campgrounds/<%= campground._id %>">Go Back</a>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
