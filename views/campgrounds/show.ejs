<%- include("../partials/header"); %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item" active>Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="card">
        <img class="card-img-top" src="<%= campground.image %> " alt="<%=campground.name%>" />
        <div class="card-body">
          <h4 class="card-title">
            <a href="/campgrounds/<%= campground._id %>" class="mr-auto"><%=campground.name%></a>
            <span class="float-right">$<%= campground.price %>/night </span>
          </h4>
          <p class="card-text"><%= campground.description %></p>
          <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
          <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-sm btn-outline-warning">Edit</a>
          <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="post" class="d-inline">
            <button class="btn btn-sm btn-outline-danger">Delete</button>
          </form>
          <% } %>
          <a href="/campgrounds" class="card-links text-decoration-none mb-2">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-caret-left" fill="currentColor"
              xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd"
                d="M10 12.796L4.519 8 10 3.204v9.592zm-.659.753l-5.48-4.796a1 1 0 0 1 0-1.506l5.48-4.796A1 1 0 0 1 11 3.204v9.592a1 1 0 0 1-1.659.753z" />
            </svg>
            Go Back
          </a>
        </div>
        <div class="card-footer text-muted"><em>Submitted By <%= campground.author.username %></em></div>
      </div>
      <div class="jumbotron mt-4 p-4">
        <div class="text-right">
          <a class="btn border-0 btn-outline-success material-icons"
            href="/campgrounds/<%= campground._id %>/comments/new ">
            add_comment
          </a>
        </div>
        <hr />
        <% campground.comments.forEach((comment) =>{ %>
        <div class="row">
          <div class="col-md-12">
            <strong><%= comment.author.username %></strong>
            <span class="float-right">10 days ago</span>
            <div class="mb-4">
              <span><%= comment.text %></span>
              <span class="float-right">
                <%if(currentUser&&comment.author.id.equals(currentUser._id)){ %>
                <a href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit "
                  class="btn border-0 btn-sm btn-outline-warning material-icons">
                  edit
                </a>
                <form class="d-inline"
                  action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="post">
                  <button class="btn border-0 btn-sm btn-outline-danger material-icons">delete</button>
                </form>

                <% } %>
              </span>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer"); %>