<%- include("../partials/header"); %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item" active>Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="card">
        <img class="card-img-top" src="<%= campground.image %> " alt="" />
        <div class="card-body">
          <h4 class="card-title">
            <a href="/campgrounds/<%= campground._id %>" class="mr-auto"><%=campground.name%></a>
            <span class="float-right">$9.00/night</span>
          </h4>
          <p class="card-text"><%= campground.description %></p>
          <a href="/campgrounds" class="card-links">
            <svg
              width="1em"
              height="1em"
              viewBox="0 0 16 16"
              class="bi bi-caret-left"
              fill="currentColor"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                fill-rule="evenodd"
                d="M10 12.796L4.519 8 10 3.204v9.592zm-.659.753l-5.48-4.796a1 1 0 0 1 0-1.506l5.48-4.796A1 1 0 0 1 11 3.204v9.592a1 1 0 0 1-1.659.753z"
              />
            </svg>
            Go Back
          </a>
        </div>
        <div class="card-footer text-muted"><em>Submitted By <%= campground.author.username %></em></div>
      </div>
      <div class="jumbotron mt-4 p-4">
        <div class="text-right">
          <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new ">Add New Comment</a>
        </div>
        <hr />
        <% campground.comments.forEach((comment) =>{ %>
        <div class="row">
          <div class="col-md-12">
            <strong><%= comment.author.username %></strong>
            <span class="float-right">10 days ago</span>
            <p><%= comment.text %></p>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer"); %>
